<div class="row">
	<div class="small-12 columns">
		<div class="row">
			<div class="small-12 columns">
				<h1>New Account</h1>
			</div>
		</div>

		<% if (flash && flash.msg) { %>
			<%- partial('../components/flashmsg') %>
		<% } %>

		<form action="/user/create">
			<div class="row">
				<div class="small-12 columns">
					<input type="email" class="radius" name="email" placeholder="Email Address" value="<%= flash.vars.email %>" required />
				</div>
			</div>
			<div class="row">
				<div class="small-12 medium-6 columns">
					<input type="password" id="password" class="radius" name="password" placeholder="Password" required />
				</div>
				<div class="small-12 medium-6 columns">
					<input type="password" class="radius" name="confirmation" placeholder="Re-type Password" data-equalto="password" required />
				</div>
			</div>
			<div class="row">
				<div class="small-12 columns">
					<button type="submit" class="expand radius"><i class="fa fa-user"></i> Create Account</button>
					<a href="/login"><i class="fa fa-chevron-circle-left"></i> Log In</a>
				</div>
			</div>
		</form>
	</div>
</div>