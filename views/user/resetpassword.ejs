<div class="row">
  <div class="small-12 columns">
    <div class="row">
      <div class="small-12 columns">
        <h1>Reset Password</h1>
        <p>Enter your new password in the fields below to reset the password for your account.</p>
      </div>
    </div>

    <% if (flash && flash.msg) { %>
      <%- partial('../components/flashmsg') %>
    <% } %>

    <form method="POST">
      <div class="row">
        <div class="small-12 medium-6 columns">
          <input type="password" id="password" class="radius" name="password" placeholder="Password" required />
        </div>
        <div class="small-12 medium-6 columns">
          <input type="password" class="radius" name="confirmation" placeholder="Re-type Password" data-equalto="password" required />
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <input type="text" value="<%= token %>" name="token" readonly>
          <button type="submit" class="expand radius"><i class="fa fa-key"></i> Reset Password</button>
        </div>
      </div>
    </form>
  </div>
</div>