<!DOCTYPE html>
<html>
  <head>
    <title>Simple Shopping List Application</title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Icon Library -->
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- Mobile Home Screen Icons -->
    <link rel="apple-touch-icon" href="/images/mobileicon.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/images/mobileicon.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="/images/mobileicon.png" />

    <!--STYLES-->
    <link rel="stylesheet" href="/styles/style.css">
    <!--STYLES END-->
  </head>

  <body>

    <div class="wrapper">
      <% if (session.authenticated === true) { %>
        <div class="icon-bar two-up tier-top">
          <a href="/mylists" class="item">
            <i class="fa fa-book"></i>
            <label>Lists</label>
          </a>
          <!--
          <a href="/profile" class="item">
            <i class="fa fa-user"></i>
            <label>Profile</label>
          </a>
          -->
          <a href="/logout" class="item">
            <i class="fa fa-sign-out"></i>
            <label>Sign Out</label>
          </a>
        </div>
      <% } else { %>
        <div class="contain-to-grid">
          <nav class="top-bar" data-topbar role="navigation">
            <ul class="title-area">
              <li class="name">
                <h1><a href="/">Simple ShopList</a></h1>
              </li>
              <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
            </ul>

            <section class="top-bar-section">
              <ul class="right">
                <li><a href="https://github.com/sstadt/shoplist" class="uppercase">GitHub</a></li>
                <li><a href="/login">Login</a></li>
              </ul>
            </section>
          </nav>
        </div>
      <% } %>

      <%- body %>
    </div>

    <footer>
      <div class="row">
        <div class="small-12 columns">
          <ul class="inline-list right clearfix">
            <li><a href="http://www.scottstadt.com" class="uppercase">My Work</a></li>
            <li><a href="https://github.com/sstadt/shoplist" class="uppercase">GitHub</a></li>
          </ul>
          <p class="show-for-medium-up left">Powered by <a href="http://sailsjs.org">Sails.js</a> and <a href="http://knockoutjs.com">Knockout.js</a>.</p>
        </div>
      </div>
    </footer>

    <% if (sails.config.environment === 'development') { %>
      <script src="//localhost:9090/livereload.js"></script>
    <% } %>

    <% if (typeof script === 'string') { %>
      <script type="text/javascript" src="<%= sails.config.globals.requirejs[sails.config.environment] %>" data-main="/js/<%= script %>.js"></script>
    <% } %>
  </body>
</html>
